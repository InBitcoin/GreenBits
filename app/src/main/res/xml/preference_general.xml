<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="advanced_options"
        android:title="@string/advanced_options"
        android:summary="@string/advanced_options_desc" />

    <Preference
        android:key="mnemonic_passphrase"
        android:title="@string/mnemonic_passphrase"
        android:summary="@string/mnemonic_passphrase_not_available" />

    <ListPreference
        android:key="fiat_key"
        android:title="@string/settings_currency" />

    <ListPreference
        android:key="denomination_key"
        android:title="@string/settings_denomination" />

    <CheckBoxPreference
        android:key="show_balance_in_title"
        android:title="@string/show_balance_in_title"
        android:summary="@string/show_balance_in_title_sum" />

    <EditTextPreference
        android:key="altime"
        android:title="@string/autologout_time"
        android:inputType="number"
        android:hint="5" />

    <CheckBoxPreference
        android:key="optin_rbf"
        android:title="@string/optin_rbf" />

    <Preference
        android:key="watch_only_login"
        android:title="@string/watchOnlyLogin"></Preference>

    <ListPreference
        android:key="default_tx_priority"
        android:entries="@array/fee_target_entries"
        android:entryValues="@array/fee_target_values"
        android:title="@string/default_transaction_priority" />

    <EditTextPreference
        android:key="default_feerate"
        android:title="@string/default_custom_feerate"
        android:inputType="numberDecimal"
        android:hint="@string/enter_satoshi_per_kb" />

    <Preference
        android:key="toggle_segwit"
        android:title="@string/segwit_disable"
        android:enabled="false" />

</PreferenceScreen>
