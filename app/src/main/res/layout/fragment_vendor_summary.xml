<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/activity_content_margin"
    android:orientation="vertical">

    <TextView
        android:text="@string/recipientAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btcAddress"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="2dp" />

    <TextView
        android:text="@string/commissionOnTheSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:paddingTop="18dp"
        android:visibility="gone"
        android:textAlignment="center" />

    <TextView
        android:text="+ 10%"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:textAlignment="center"
        android:padding="2dp" />

    <TextView
        android:text="@string/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"
        android:textAlignment="center"
        android:paddingTop="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/btcView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/sendBitcoinGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp">

                <TextView
                    android:id="@+id/sendBitcoinScaleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accent" />

                <com.greenaddress.greenbits.ui.FontAwesomeTextView
                    android:id="@+id/sendBitcoinUnitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fa_btc"
                    android:textColor="@color/accent"
                    android:textSize="24sp" />

            </LinearLayout>

            <com.greenaddress.greenbits.ui.FontFitEditText

                android:id="@+id/sendAmountEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_toEndOf="@id/sendBitcoinGroup"
                android:layout_toRightOf="@id/sendBitcoinGroup"
                android:enabled="false"
                android:gravity="end|center_vertical"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingLeft="14dp"
                android:textColor="@color/textColor"
                android:textSize="24sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fiatView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/sendFiatGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp">

                <com.greenaddress.greenbits.ui.FontAwesomeTextView

                    android:id="@+id/sendFiatIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/fa_usd"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/accent"
                    android:textSize="24sp" />

            </LinearLayout>

            <com.greenaddress.greenbits.ui.FontFitEditText
                android:id="@+id/sendAmountFiatEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:enabled="false"
                android:gravity="end"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingLeft="14dp"
                android:textColor="@color/textColor"
                android:visibility="gone"
                android:textSize="24sp" />

            <com.greenaddress.greenbits.ui.FontFitEditText
                android:id="@+id/sendAmountFiatEditTextWithoutCommission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:enabled="false"
                android:gravity="end"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:paddingLeft="14dp"
                android:textColor="@color/textColor"
                android:textSize="24sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/priority_label" />

        <Spinner
            android:id="@+id/feeTargetCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/feerateTextEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:hint="@string/sat_per_kb"
            android:inputType="numberDecimal" />

    </LinearLayout>

    <com.dd.CircularProgressButton
        android:id="@+id/sendSendButton"
        style="@style/myButtonCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cpb_textIdle="@string/send"
        app:cpb_colorIndicator="@color/accent"
        app:cpb_selectorIdle="@drawable/buttonprogressselector"
        android:textColor="@color/white" />


    <!-- workaround: hidden items to mix vendor and send fragment -->
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sendMaxLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Switch
            android:id="@+id/sendMaxButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.greenaddress.greenbits.ui.FontAwesomeTextView
            android:id="@+id/sendScanIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.greenaddress.greenbits.ui.ClipboardEditText
            android:id="@+id/sendToEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.greenaddress.greenbits.ui.FontAwesomeTextView
            android:id="@+id/sendToNoteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instantConfirmationCheckBox" />

        <TextView
            android:id="@+id/sendSubAccountBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.greenaddress.greenbits.ui.FontAwesomeTextView
            android:id="@+id/sendSubAccountBalanceUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/sendToNoteText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
