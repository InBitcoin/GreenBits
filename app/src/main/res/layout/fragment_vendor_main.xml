<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/amountView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:text="FIAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnFiatSwitch"
                style="@style/myButtonVendor"
                android:enabled="false"
                android:layout_weight="1" />

            <Button
                android:text="BTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBtcSwitch"
                style="@style/myButtonVendor"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btcView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/sendBitcoinGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp">

                        <TextView
                            android:id="@+id/sendBitcoinScaleText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/accent" />

                        <com.greenaddress.greenbits.ui.FontAwesomeTextView
                            android:id="@+id/sendBitcoinUnitText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/fa_btc"
                            android:textColor="@color/accent"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <com.greenaddress.greenbits.ui.FontFitEditText

                        android:id="@+id/sendAmountEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_toEndOf="@id/sendBitcoinGroup"
                        android:layout_toRightOf="@id/sendBitcoinGroup"
                        android:enabled="false"
                        android:gravity="end|center_vertical"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:paddingLeft="14dp"
                        android:textColor="@color/textColor"
                        android:textSize="24sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/fiatView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/sendFiatGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="14dp">

                        <com.greenaddress.greenbits.ui.FontAwesomeTextView

                            android:id="@+id/sendFiatIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/fa_usd"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/accent"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <com.greenaddress.greenbits.ui.FontFitEditText
                        android:id="@+id/sendAmountFiatEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/sendFiatGroup"
                        android:layout_toRightOf="@id/sendFiatGroup"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:enabled="false"
                        android:gravity="end"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:paddingLeft="14dp"
                        android:textColor="@color/textColor"
                        android:textSize="24sp" />
                </RelativeLayout>
            </LinearLayout>

            <com.greenaddress.greenbits.ui.FontAwesomeTextView
                android:id="@+id/payButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/fa_camera"
                android:textColor="@color/accent"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        app:columnCount="3">

        <Button
            android:id="@+id/btn1"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="3" />

        <Button
            android:id="@+id/btn4"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="6" />

        <Button
            android:id="@+id/btn7"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="9" />

        <Button
            android:id="@+id/button5"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:enabled="false"
            android:text="10%" />

        <Button
            android:id="@+id/btn0"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="0" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="C" />


        <Button
            android:id="@+id/fiat10"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginTop="30dp"
            android:text="10" />

        <Button
            android:id="@+id/fiat20"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginTop="30dp"
            android:text="20" />

        <Button
            android:id="@+id/fiat50"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_marginTop="30dp"
            android:text="50" />

        <Button
            android:id="@+id/fiat100"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="100" />

        <Button
            android:id="@+id/fiat150"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="150" />

        <Button
            android:id="@+id/fiat200"
            style="@style/myButtonVendor"
            app:layout_gravity="fill_horizontal"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:text="200" />
    </android.support.v7.widget.GridLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
