<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:padding="@dimen/activity_content_margin"
    tools:context="com.greenaddress.greenbits.ui.SendFragment"
    >

    <ScrollView
        android:id="@+id/sendLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <com.greenaddress.greenbits.ui.FontAwesomeTextView
                        android:id="@+id/sendSubAccountBalanceUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sendSubAccountBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sendToText"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">


                <com.greenaddress.greenbits.ui.FontAwesomeTextView
                    android:id="@+id/sendScanIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/fa_camera"
                    android:textColor="@color/accent"
                    android:textSize="24sp" />

                <com.greenaddress.greenbits.ui.ClipboardEditText
                    android:id="@+id/sendToEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/sendScanIcon"
                    android:layout_toStartOf="@id/sendScanIcon"
                    android:textColor="@color/textColor"
                    android:hint="@string/sendPayTo"
                    android:ellipsize="end"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:textSize="20sp" />

                <ProgressBar
                    android:id="@+id/sendBip70ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" />

            </RelativeLayout>


            <TextView
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/sendAmountText"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/grayTransparent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/sendBitcoinGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="14dp">

                                <com.greenaddress.greenbits.ui.FontAwesomeTextView
                                    android:id="@+id/sendBitcoinUnitText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/fa_btc"
                                    android:textColor="@color/accent"
                                    android:textSize="24sp" />

                            </LinearLayout>

                            <com.greenaddress.greenbits.ui.FontFitEditText

                                android:id="@+id/sendAmountEditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_toRightOf="@id/sendBitcoinGroup"
                                android:layout_toEndOf="@id/sendBitcoinGroup"
                                android:textColor="@color/textColor"
                                android:gravity="end|center_vertical"
                                android:paddingLeft="14dp"
                                android:hint="@string/zeroDecimal"
                                android:inputType="numberDecimal"
                                android:textSize="24sp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="16dp"
                        android:layout_height="fill_parent" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/sendFiatGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="14dp"
                            android:paddingLeft="14dp">

                            <com.greenaddress.greenbits.ui.FontAwesomeTextView

                                android:id="@+id/sendFiatIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/fa_usd"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/accent"
                                android:textSize="24sp" />

                        </LinearLayout>

                        <com.greenaddress.greenbits.ui.FontFitEditText
                            android:id="@+id/sendAmountFiatEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="14dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_toRightOf="@id/sendFiatGroup"
                            android:layout_toEndOf="@id/sendFiatGroup"
                            android:gravity="end"
                            android:textColor="@color/textColor"
                            android:hint="@string/zeroDecimal"
                            android:inputType="numberDecimal"
                            android:textSize="24sp" />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:textColor="@color/secondaryTextColor"
                        android:textStyle="italic"
                        android:text="@string/warningExchange"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp">
                    <TextView
                        android:id="@+id/sendMaxLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_max_amount"
                        />
                    <Switch
                        android:id="@+id/sendMaxButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textOff="@string/send_max_amount"
                        android:textOn="@string/send_max_amount"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/layoutFeeBase"
                android:padding="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="italic"
                    android:textColor="@color/secondaryTextColor"
                    android:text="@string/networkFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <CheckedTextView
                        android:checkMark="?android:attr/listChoiceIndicatorSingle"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:id="@+id/checkHurryFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feePriorityHurry" />

                </LinearLayout>

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/feeDescHurry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/textColor"
                    android:textStyle="italic"
                    android:text=""/>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/layoutFeePro"
                android:paddingTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/secondaryTextColor"
                        android:textStyle="italic"
                        android:text="@string/networkFee"/>

                    <TextView
                        android:textSize="18sp"
                        android:id="@+id/showFeeSelector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="4dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="italic"
                        android:text=""/>
                </LinearLayout>

                <TextView
                    android:id="@+id/feeDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/secondaryTextColor"
                    android:textStyle="italic"
                    android:minLines="2"
                    android:text=""/>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:layout_margin="4dp"
                        android:id="@+id/radiogroupFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_radio_border"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:visibility="gone"
                            android:id="@+id/customIcon"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@color/textColor"
                            android:background="@drawable/custom_radio"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:checked="true"
                            android:text="@string/fa_pencil_square_o" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent"
                            android:visibility="visible" />

                        <RadioButton
                            android:id="@+id/btnSuperEco"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@color/lightRed"
                            android:background="@drawable/custom_radio"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="@string/fa_flask" />

                        <View
                            android:id="@+id/vSep1"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent"
                            android:visibility="visible" />

                        <RadioButton
                            android:id="@+id/btnEco"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@color/textColor"
                            android:background="@drawable/custom_radio"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="@string/fa_clock_o" />

                        <View
                            android:id="@+id/vSep2"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent"
                            android:visibility="visible" />

                        <RadioButton
                            android:id="@+id/btnNormal"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="@color/textColor"
                            android:background="@drawable/custom_radio"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="@string/fa_space_shuttle" />

                        <View
                            android:id="@+id/vSep3"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorAccent"
                            android:visibility="visible" />

                        <RadioButton
                            android:visibility="gone"
                            android:id="@+id/btnHi"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textColor="#000000"
                            android:background="@drawable/custom_radio"
                            android:button="@android:color/transparent"
                            android:gravity="center"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="@string/fa_bolt" />
a                   </RadioGroup>

                    <EditText
                        android:visibility="invisible"
                        android:textAlignment="center"
                        android:id="@+id/feerateTextEdit"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:hint="@string/sat_per_kb"
                        android:inputType="numberDecimal" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priority_label" />

                <Spinner
                    android:id="@+id/feeTargetCombo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">


                <com.greenaddress.greenbits.ui.FontAwesomeTextView
                    android:id="@+id/sendToNoteIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/fa_pencil"
                    android:textColor="@color/accent"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/sendToNoteText"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@id/sendToNoteIcon"
                    android:layout_toStartOf="@id/sendToNoteIcon"
                    android:textColor="@color/textColor"
                    android:hint="@string/sendOptionalMemo"
                    android:inputType="textMultiLine|textNoSuggestions|textVisiblePassword"
                    android:textSize="18sp" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/clearAllFields"
                        style="@style/myButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="10dp"
                        android:background="@color/hide"
                        android:text="@string/cancel"
                        android:textColor="@color/accent" />

                    <com.greenaddress.greenbits.ui.CircularButton
                        android:id="@+id/sendSendButton"
                        android:layout_margin="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="10dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:textColor="@color/white"
                        app:text="@string/send" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
